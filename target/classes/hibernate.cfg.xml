<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<!-- jdbc properties -->
    	<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    	<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/booking-app?useSSL=false</property>
    	<property name="hibernate.connection.username">root</property>
    	<property name="hibernate.connection.password">Xipsauto</property>
    	
    	<!-- dialect (MYSQL) -->
    	<property name="hibernate.dialect">org.hibernate.dialect.MySQL55Dialect</property>
    	
    	<!-- Hibernate to create a schema -->
    	<property name="hibernate.hbm2ddl.auto">update</property>
    	
    	<!-- In console check SQL queries generated by Hibernate-->
    	<property name="hibernate.show_sql">true</property>
    	
    	<!-- hibernate has to understand User as an entity -->
    	<mapping resource="com/booking/model/User.hbm.xml"/>
    	
    	<!-- hibernate has to understand Flight as an entity -->
    	<mapping resource="com/booking/model/Flight.hbm.xml"/>
    	
    </session-factory>
</hibernate-configuration>
